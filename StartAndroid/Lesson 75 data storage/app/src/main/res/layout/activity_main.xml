<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onclick"
        android:text="@string/write_file"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onclick"
        android:text="@string/read_file"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWrite" />

    <Button
        android:id="@+id/buttonWriteSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onclick"
        android:text="@string/write_file_sd"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonWrite"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReadSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onclick"
        android:text="@string/read_file_sd"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonRead"
        app:layout_constraintStart_toStartOf="@+id/buttonWriteSD" />
</android.support.constraint.ConstraintLayout>